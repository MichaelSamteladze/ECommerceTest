@model OrderDetailsModel.PageViewModel
@section HeaderSection{
    @Html.DevExpress().GetStyleSheets(new StyleSheet { ExtensionSuite = ExtensionSuite.GridView })
    @Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.GridView })
}


<div class="order-details-table">
    <div class="row">
        <div class="col-md-4">
            <h4 style="text-align: center">Shipping</h4>
            <table class="table table-bordered">
                <tr>
                    <td>Name:</td>
                    <td>@Model.ShippingFirstname @Model.ShippingLastname</td>
                </tr>
                <tr>
                    <td>Country:</td>
                    <td>@Model.ShippingCountry</td>
                </tr>
                <tr>
                    <td>Region:</td>
                    <td>@Model.ShippingRegion</td>
                </tr>
                <tr>
                    <td>City:</td>
                    <td>@Model.ShippingCity</td>
                </tr>
                <tr>
                    <td>Zip:</td>
                    <td>@Model.ShippingZip</td>
                </tr>
                <tr>
                    <td>Address 1:</td>
                    <td>@Model.ShippingAddress1</td>
                </tr>
                <tr>
                    <td>Address 2:</td>
                    <td>@Model.ShippingAddress2</td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <h4 style="text-align: center">Billing</h4>
            <table class="table table-bordered">
                <tr>
                    <td>Name:</td>
                    <td>@Model.BillingFirstname @Model.BillingLastname</td>
                </tr>
                <tr>
                    <td>Country:</td>
                    <td>@Model.BillingCountry</td>
                </tr>
                <tr>
                    <td>Region:</td>
                    <td>@Model.BillingRegion</td>
                </tr>
                <tr>
                    <td>City:</td>
                    <td>@Model.BillingCity</td>
                </tr>
                <tr>
                    <td>Zip:</td>
                    <td>@Model.BillingZip</td>
                </tr>
                <tr>
                    <td>Address 1:</td>
                    <td>@Model.BillingAddress1</td>
                </tr>
                <tr>
                    <td>Address 2:</td>
                    <td>@Model.BillingAddress2</td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <h4 style="text-align: center">Payment</h4>
            <table class="table  table-bordered">
                <tr>
                    <td>Type:</td>
                    <td>@Model.PaymentOption</td>
                </tr>
                <tr>
                    <td>Date:</td>
                    <td>@Model.PaymentDate</td>
                </tr>
                <tr>
                    <td>Total:</td>
                    <td>@Model.TotalPrice</td>
                </tr>
                
            </table>
        </div>
    </div>
</div>


@if (Model.ShowGrid)
{
    <div class="row">
        <div class="col-lg-12">
            @Html.Partial(ViewNames.Admin.Shared.DevexpressGrid, Model.Grid)
        </div>
    </div>
}
