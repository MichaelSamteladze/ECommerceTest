@model LoginModel.PageViewModel
@{ Layout = null;}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@Html.Raw(AppSettings.ProjectName)</title>
    <link href="~/Content/Plugins/FontAwesome/5.5.0/css/all.css" rel="stylesheet" />
    <link href="~/Content/Plugins/Bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Css/style.css" rel="stylesheet" />
    <link href="~/Content/Plugins/Angle/Css/app.css" rel="stylesheet" />
    <link href="~/Content/Plugins/Angle/Css/theme-a.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="card">
            <div class="card-body">
                <div class="text-center mb-3"><img src="~/content/Images/logo.png" width="100" alt="logo" class="block-center img-rounded"></div>
                <form method="post">
                    <div class="form-group">
                        <input name="@nameof(Model.Username)" type="text" placeholder="Email" autocomplete="off" class="form-control" value="@Model.Username">
                    </div>
                    <div class="form-group">
                        <input name="@nameof(Model.Password)" type="password" placeholder="Password" class="form-control" value="@Model.Password">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-oval btn-primary">Login</button>
                    </div>
                </form>
                @if (Model.IsLoginFailed)
                {
                <p class="text-center text-danger">@Model.ErrorMessage</p>
                }
            </div>
        </div>
        <div class="p-lg text-center">
            <span>@Html.Raw(AppSettings.ProjectName)</span>
        </div>
    </div>    
</body>
</html>